#!/bin/sh

if which systemctl &> /dev/null; then
    systemctl daemon-reload
    systemctl enable var-tmp.mount
fi

# packages, one per line
PACKAGES="
live-build
devscripts
python-stdeb
faketime
virtualenv
"
export DEBIAN_FRONTEND=noninteractive
yes N 2> /dev/null | apt-get install -qq -y --force-yes ${PACKAGES}

